# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
API_SECRET_KEY=your-secret-key-here

# Blockchain Configuration
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed.binance.org/

# WalletConnect Project ID (for RainbowKit)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# DeFi Protocol APIs
NEXT_PUBLIC_COINGECKO_API_KEY=your-coingecko-api-key
NEXT_PUBLIC_DEFIPULSE_API_KEY=your-defipulse-api-key
NEXT_PUBLIC_MORALIS_API_KEY=your-moralis-api-key

# Database (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/defi_risk_analyzer

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Security
NEXT_PUBLIC_ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=30

# Feature Flags
NEXT_PUBLIC_ENABLE_PORTFOLIO_TRACKING=true
NEXT_PUBLIC_ENABLE_SMART_CONTRACT_AUDIT=true
NEXT_PUBLIC_ENABLE_YIELD_OPTIMIZER=true
NEXT_PUBLIC_MAX_PORTFOLIO_WALLETS=10